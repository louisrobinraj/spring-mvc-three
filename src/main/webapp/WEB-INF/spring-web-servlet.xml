<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/mvc 
        http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:component-scan base-package="com.sjc.hrms.contoller" />

	<bean class="com.sjc.hrms.services.impl.LoginServiceImpl" />
	
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="WEB-INF/views/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<bean class="org.springframework.context.support.ResourceBundleMessageSource"
		id="messageSource">
		<property name="basename" value="messages" />
	</bean>

	<mvc:resources mapping="/resources/**" location="/resources/" />
	<mvc:annotation-driven />


	<mvc:interceptors>  
			<!-- <bean class="com.sjc.hrms.intercepters.ProcessingTimeInterceptors"/> -->
		<mvc:interceptor>
			<mvc:mapping path="/*" />
			<ref bean="checkRequestTimetHandler" />
		</mvc:interceptor>
		<mvc:interceptor>
			<mvc:mapping path="/l*" />
			<ref bean="checkMaintananceHandler" />
		</mvc:interceptor>
	</mvc:interceptors>

	<bean id="checkRequestTimetHandler" class="com.sjc.hrms.intercepters.ProcessingTimeInterceptors" />
	<bean id="checkMaintananceHandler" class="com.sjc.hrms.intercepters.MaintenanceInterceptor" />


</beans>